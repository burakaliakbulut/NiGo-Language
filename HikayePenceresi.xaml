<Window x:Class="NiGoLanguage.HikayePenceresi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hikaye Oluşturucu"
        Height="650" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E" Foreground="White">

    <StackPanel Margin="20">
        <Button Content="📖 Yeni Hikaye Oluştur"
                Click="BtnHikayeOlustur_Click"
                Height="40" FontWeight="Bold"
                Background="#007ACC" Foreground="White" Margin="0,0,0,10"/>
        
       <TextBlock x:Name="txtKullaniciBilgi" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10" HorizontalAlignment="Right"/>

        <TextBlock Text="İngilizce Hikaye:" FontWeight="Bold" FontSize="14"/>
        <TextBox x:Name="txtIngilizce" Height="120" Margin="0,5" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"/>

        <TextBlock Text="Türkçe Çeviri:" FontWeight="Bold" FontSize="14" Margin="0,10,0,0"/>
        <TextBox x:Name="txtTurkce" Height="120" Margin="0,5" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"/>
    </StackPanel>
</Window>
