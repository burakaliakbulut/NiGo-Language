<Window x:Class="NiGoLanguage.Flashcard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flashcard"
        Height="400" Width="500"
        Background="#1E1E1E" Foreground="White"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Kelime" FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10"/>

            <Border Background="#333" CornerRadius="10" Padding="20" Margin="0,10">
                <TextBlock x:Name="txtKart" FontSize="28" FontWeight="SemiBold" TextAlignment="Center" TextWrapping="Wrap"/>
            </Border>

            <Button Content="Cevabı Göster" Click="BtnCevabiGoster_Click" Margin="0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="✅ Bildim" Width="100" Margin="5" Click="BtnBildim_Click"/>
                <Button Content="⏩ Geç" Width="100" Margin="5" Click="BtnGec_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
