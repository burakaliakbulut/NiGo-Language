<Window x:Class="NiGoLanguage.WordleOyunu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wordle Oyunu"
        Height="600"
        Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        Foreground="White"
        Loaded="Window_Loaded">

    <StackPanel Margin="20" VerticalAlignment="Top">
        <TextBlock x:Name="txtKullaniciBilgi" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10" HorizontalAlignment="Right"/>

        <!-- Oyun Durumu -->
        <TextBlock x:Name="txtDurum"
                   FontSize="18"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Tahmin Girişi -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBox x:Name="txtTahmin"
                     Width="120"
                     Height="35"
                     FontSize="16"
                     MaxLength="5"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     Margin="0,0,10,0"
                     Background="#2D2D30"
                     Foreground="White"
                     BorderBrush="Gray"/>

            <Button Content="Tahmin Et"
                    Width="100"
                    Height="35"
                    Background="#007ACC"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="BtnTahmin_Click"/>
        </StackPanel>

        <!-- Tahmin Kutuları -->
        <StackPanel x:Name="tahminAlani" Margin="0,0,0,20" />

        <!-- Yeniden Başlat Butonu -->
        <Button Content="Yeniden Başlat"
                Width="150"
                Height="35"
                HorizontalAlignment="Center"
                Click="BtnYenidenBaslat_Click"
                Background="#3A3D41"
                Foreground="White"
                FontWeight="SemiBold"/>

    </StackPanel>
</Window>
