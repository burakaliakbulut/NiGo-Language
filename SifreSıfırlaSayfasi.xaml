<Window x:Class="NiGoLanguage.SifreSifirlaSayfasi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Şifre Sıfırla"
        Height="300" Width="350"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        Foreground="White">
    <Border Background="#2D2D30" CornerRadius="10" Padding="20" Margin="20">
        <StackPanel>

            <TextBlock Text="Şifre Sıfırlama" FontSize="20" FontWeight="Bold"
                       Foreground="#00BCD4" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Kullanıcı Adı" Margin="0,0,0,5"/>
            <TextBox x:Name="txtKullaniciAdi" Background="#3A3D41" Foreground="White" Margin="0,0,0,10"/>

            <TextBlock Text="Yeni Şifre" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtYeniSifre" Background="#3A3D41" Foreground="White" Margin="0,0,0,20"/>

            <Button Content="Şifreyi Güncelle"
                    Click="BtnSifreGuncelle_Click"
                    Background="#2196F3"
                    Foreground="White"
                    FontWeight="Bold"
                    Height="35"/>
        </StackPanel>
    </Border>
</Window>
