<Window x:Class="NiGoLanguage.Quiz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NiGo Language - Quiz"
        Height="437"
        Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        Foreground="White">

    <Border Background="#2D2D30" CornerRadius="10" Padding="20" Margin="20">
        <StackPanel VerticalAlignment="Center">

            <TextBlock Text="🧠 Kelime Quiz"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#00BCD4"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock x:Name="txtSoru"
                       FontSize="18"
                       FontWeight="SemiBold"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBox x:Name="txtCevap"
                     Height="40"
                     FontSize="18"
                     Background="#3A3D41"
                     Foreground="White"
                     BorderBrush="Gray"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     Margin="0,0,0,20"/>

            <Button Content="✅ Cevapla"
                    Click="BtnCevapla_Click"
                    Height="40"
                    Width="150"
                    HorizontalAlignment="Center"
                    Background="#4CAF50"
                    Foreground="White"
                    FontWeight="Bold"/>

        </StackPanel>
    </Border>
</Window>
